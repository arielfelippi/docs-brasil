{
    "name": "arielfelippi/docs-brasil",
    "description": "Gerenciador de documentos brasileiros, como: CPF, CNPJ, IE, CNH...",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "Brasil",
        "brasil",
        "DocsBrasil",
        "docs-brasil",
        "documentos",
        "documents",
        "docs",
        "CPF",
        "CNPJ",
        "IE",
        "CNH"
    ],
    "authors": [
        {
            "name": "arielfelippi",
            "email": "ariel.felippi@hotmail.com",
            "homepage": "https://github.com/arielfelippi"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "config": {
        "platform": {
            "php": "8.1"
        },
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "autoload": {
        "psr-4": {
            "DocsBrasil\\": "src/DocsBrasil/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.49",
        "pestphp/pest": "^2.34"
    },
    "scripts": {
        "phpcs": [
            "php-cs-fixer fix --config=src/DocsBrasil/php-lint/.php-cs-fixer.dist.php --verbose"
        ],
        "pest-tests": [
            "pest --dirty"
        ]
    }
}
